extends ../common/layout

block header
  .fixed.contain-to-grid
    .top-bar.fixed(data-topbar)
      ul.title-area
        li.name
          h1: a(href='/', target='_self') My Site
        li.toggle-topbar.menu-icon: a(href='#') Menu
      section.top-bar-section
        ul.right
          li.active: a(href='/admin/', target='_self') Admin Home
          li: a(href='/admin/logout', target='_self') Logout

block content
  .row
    h1 Hello Admin!
    a.ui.link(href='/admin/logout', target='_self') Logout
    a.ui.link(href='/admin/') Admin Home
    a.ui.link(href='/', target='_self') View Site
    div(ng-view)